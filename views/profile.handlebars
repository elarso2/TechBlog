<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Write a new blog post!</h3>
    <form class='form new-blog' id='newBlogForm'>
      <div class='form-group'>
        <label for='blog-title'>Blog Title:</label>
        <input class='form-input' type='text' id='title' name='blog-title' />
      </div>
      <div class='form-group'>
        <label for='blog-content'>Blog Content:</label>
        <input
          class='form-input'
          type='text'
          id='content'
          name='blog-content'
        />
      </div>
      <div class='form-group'>
        <button type='submit'>Post Blog</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
    <div class='col-md-6 blog-list'>
      <h3>Your Blog Posts:</h3>

      {{#each blog as |blogs|}}
        <div class='row mb-2' id='blogpost'>
          <div class='col-md-8'>
            <h4><a href='/blog/{{blog.id}}'>{{blog.name}}</a></h4>
          </div>
          <div class='col-md-4'>
            <button class='btn btn-sm btn-danger' data-id='{{blog.id}}'>Delete
              Post</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}

</div>

<script src='/public/js/profile.js'></script>